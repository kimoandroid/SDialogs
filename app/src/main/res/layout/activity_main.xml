<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/nested_scroll_view">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="alert"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show alert dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="loading"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show loading dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="input"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show input dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="items"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show items dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="single"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show single select items dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="multi"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show multi select items dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="progress"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show progress dialog" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="custom"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show custom dialog" />
             
        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="seek"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show slider dialog" />
             
         <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:onClick="pattern"
             android:textSize="18sp"
             android:textColor="#000000"
             android:text="show pattern dialog"/>

    </LinearLayout>

</ScrollView>